<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("hideandchef-logo.png", class:"furima-icon", size: '600×400'), "/" %>
    <div class="title-logo">Hide and Chef</div>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %> <%# ログインの有無で表示が変わるように分岐%>
        <li><%= link_to 'My page', user_path(current_user), class: "user-nickname" %></li>
        <li><%= link_to 'Chef page', "/chefs/#{current_user.id}", class: "user-nickname" %></li> 
        <li><%= link_to 'Logout', "/users/sign_out", method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'Login', "/users/sign_in", class: "login" %></li>
        <li><%= link_to 'Login with Facebook', user_facebook_omniauth_authorize_path, method: :post, class: "login" %></li>
        <li><%= link_to 'Login with Google', user_google_oauth2_omniauth_authorize_path, method: :post, class: "login" %></li>
        <li><%= link_to 'Sigh up', new_user_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>