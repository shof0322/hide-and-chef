<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('hideandchef-logo.png' , size: '256x173'), "/" %>
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">情報を入力</h2>
    <%= form_with model: @chef, url: "/chefs", method: :post, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# シェフ画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        シェフ画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <div id="image-list"></div>
    <%# /シェフ画像 %>

    <%# 名前と自己紹介とこだわり %>
    <div class="new-items">
      <div class="weight-bold-text">
        名前
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          自己紹介
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :explanation, class:"items-text", id:"item-info", rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /名前と自己紹介とこだわり %>

    <%# カテゴリーとこだわり %>
    <div class="items-detail">
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          こだわり
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :commitment, class:"items-text", id:"item-info", rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /カテゴリーとこだわり %>

    <%# 店舗情報 %>
    <div class='shipping-address-form'>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
          <span class="form-any">任意</span>
        </div>
        <%= f.text_field :building, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">電話番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :phone_num, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
      </div>
    </div>
    <%# /店舗情報 %>

    <%# 目標調達額 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>目標調達額<br>(¥300〜9,999,999)</span>
        <a class="question" href="#">?</a>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>目標価格</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :target_amount, class:"price-input", id:"item-price" %>
        </div>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          投資リターンについて
        </div>
        <%= f.text_area :target_return, class:"items-text", id:"item-info", rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /目標調達額 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出店する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">Hide and Chef 利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('hideandchef-logo.png' , size: '256x173'), "/" %>
    <p class="inc">
      ©︎Hide and Chef,Inc.
    </p>
  </footer>
</div>